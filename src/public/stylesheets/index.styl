body, html 
	margin: 0
	width: 100%
	height: 100%
	font-family: 'Roboto'


#root 
	display: block
	position: relative
	width: 100%
	height: 100%

.App 
	display: flex
	flex-direction: column
	position: relative
	border: 1px solid #ddd
	background-color: #f0f0f0
	margin: 0 auto
	margin-top: 10px

.BottomBar, .TopBar 
	width: 100%
	flex-grow: 0


.Middle 
	padding: 10px
	flex-grow: 1
	display: flex


.NoteButtonContainer 
	display: block
	width: 100%


.ButtonContainer 
	width: 100%
	display: flex
	flex-direction: row
	justify-content: center


.NoteButton 
	display: flex
	cursor: pointer
	height: 100px
	width: 85px
	flex-grow: 1
	margin: 5px
	border: 1px solid #000
	color: #333
	background-color: rgba(66, 133, 244, 1)
	border-radius: 2px
	transform: scale3d(1,1,1)
	justify-content: center
	align-items: center
	box-shadow: 4px 4px 4px rgba(0,0,0,0.25)
	transition: all .2s ease

	&.active 
		color: #000
		/* box-shadow: inset 4px 4px 4px rgba(0,0,0,0.25) */
		background-color: rgba(66, 133, 244, .4)
		-webkit-animation-name: pulse 
		-webkit-animation-duration: 0.3s 
		-webkit-animation-iteration-count: infinite

	.degree 
		font-size: 30px

	.noteName 
		position: absolute
		top: 0
		right: 5px


@-webkit-keyframes pulse 
	from 
		-webkit-transform: scale(1.0)
	
	50% 
		-webkit-transform: scale(1.03)
	
	to  
		-webkit-transform: scale(1.0)
	
