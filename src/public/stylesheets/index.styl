

body, html 
	margin: 0
	width: 100%
	height: 100%
	font-family: 'Roboto'


#root 
	display: block
	position: relative
	width: 100%
	height: 100%

.App 
	display: flex
	flex-direction: column
	position: relative
	border: 1px solid #ddd
	background-color: #f0f0f0
	margin: 0 auto
	user-select: none

.BottomBar, .TopBar 
	width: 100%
	flex-grow: 0
	
.TopBar
	width: 100%
	display: flex
	box-sizing: border-box
	padding: 10px
	padding-bottom: 0px
	background-color: rgba(66, 133, 244, 1)
	box-shadow: 0px 5px 5px rgba(1,1,1,0.4)
	
	.DropdownContainer
		display: block
		position: relative
		
		.dropdown-label
			display: block
			text-align: center
			color: #000
			width: 100%
			
		.dropdown-button
			color: #fff !important
		
		svg
			fill: #fff !important
			position: relative
			top: 6px
	


.Middle 
	padding: 10px
	flex-grow: 1


.NoteButtonContainer 
	display: block
	width: 100%


.ButtonContainer 
	width: 100%
	display: flex
	flex-direction: row
	justify-content: center


.NoteButton 
	display: flex
	cursor: pointer
	height: 100px
	width: 85px
	flex-grow: 1
	margin: 5px
	color: #333
	background-color: rgba(66, 133, 244, 1)
	border-radius: 2px
	transform: scale3d(1,1,1)
	justify-content: center
	align-items: center
	box-shadow: 2px 2px 2px rgba(0,0,0,0.25)
	transition: all .2s ease

	&.active 
		color: #000
		font-weight: bold
		/* box-shadow: inset 4px 4px 4px rgba(0,0,0,0.25) */
		background-color: rgba(66, 133, 244, .4)
		-webkit-animation-name: pulse 
		-webkit-animation-duration: 0.3s 
		-webkit-animation-iteration-count: infinite

	.degree 
		font-size: 25px

	.noteName 
		position: absolute
		top: 0
		right: 5px
		
	.absolute-degree
		position: absolute
		bottom: 0
		right: 5px
		
	.midi-value
		position: absolute
		bottom: 0
		left: 5px

@-webkit-keyframes pulse 
	from 
		-webkit-transform: scale(1.04)
	
	50% 
		-webkit-transform: scale(1.08)
	
	to  
		-webkit-transform: scale(1.04)
		


.PositionGridContainer
	margin-top: 20px

gridBorderColor=#999

.grid
	display: flex
	box-sizing: border-box
	width: 100%
	height: 50px

	.grid-item
		flex-grow: 1
		display: flex
		align-items: center
		justify-content: center
		height: 100%
		background-color: #ccc
		border: 1px solid gridBorderColor
		border-left: 0px
		transition: all .2s ease
		transform: scale3d(1,1,1)
		text-align: center

	.grid-item:first-child
		border-left: 1px solid gridBorderColor
		border-top-left-radius: 5px
		border-bottom-left-radius: 5px

	.grid-item:last-child
		border-right: 1px solid gridBorderColor
		border-top-right-radius: 5px
		border-bottom-right-radius: 5px

	.grid-item.entered
		font-size: 20px
		font-weight: bold
		color: #000
		border-left: 1px solid gridBorderColor
		background-color: #fff
		transform: scale3d(1.15, 1.15, 1)
		z-index: 5
		box-shadow: 2px 2px 2px rgba(0,0,0,0.25);
