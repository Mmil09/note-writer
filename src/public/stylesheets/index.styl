

body, html 
	margin: 0
	width: 100%
	height: 100%
	font-family: 'Roboto'


#root 
	display: block
	position: relative
	width: 100%
	height: 100%

.App 
	display: flex
	flex-direction: column
	position: relative
	border: 1px solid #ddd
	background-color: #f0f0f0
	margin: 0 auto
	margin-top: 10px

.BottomBar, .TopBar 
	width: 100%
	flex-grow: 0
	
.TopBar
	width: 100%
	display: flex
	height: 70px
	background-color: rgba(66, 133, 244, 1)
	
	.DropdownContainer
		
		label
			display: block
			color: #fff
			position: relative
			top: 5px
			padding-left: 20px
				
	
	.toolbar-select
		flex-shrink: 1
		
		&.key, 
		&.mode
			width: 100px	


.Middle 
	padding: 10px
	flex-grow: 1
	display: flex


.NoteButtonContainer 
	display: block
	width: 100%


.ButtonContainer 
	width: 100%
	display: flex
	flex-direction: row
	justify-content: center


.NoteButton 
	display: flex
	cursor: pointer
	height: 100px
	width: 85px
	flex-grow: 1
	margin: 5px
	border: 1px solid #000
	color: #333
	background-color: rgba(66, 133, 244, 1)
	border-radius: 2px
	transform: scale3d(1,1,1)
	justify-content: center
	align-items: center
	box-shadow: 4px 4px 4px rgba(0,0,0,0.25)
	transition: all .2s ease

	&.active 
		color: #000
		/* box-shadow: inset 4px 4px 4px rgba(0,0,0,0.25) */
		background-color: rgba(66, 133, 244, .4)
		-webkit-animation-name: pulse 
		-webkit-animation-duration: 0.3s 
		-webkit-animation-iteration-count: infinite

	.degree 
		font-size: 25px

	.noteName 
		position: absolute
		top: 0
		right: 5px
		
	.absolute-degree
		position: absolute
		bottom: 0
		right: 5px
		
	.midi-value
		position: absolute
		bottom: 0
		left: 5px

@-webkit-keyframes pulse 
	from 
		-webkit-transform: scale(1.0)
	
	50% 
		-webkit-transform: scale(1.03)
	
	to  
		-webkit-transform: scale(1.0)




.Dropdown-root
	position relative

.Dropdown-control
	position relative
	overflow hidden
	background-color white
	border 1px solid #ccc
	border-radius 2px
	box-sizing border-box
	color #333
	cursor default
	outline none
	padding 8px 52px 8px 10px
	transition all 200ms ease
	&:hover
			box-shadow 0 1px 0 rgba(0,0,0,0.06)

.Dropdown-arrow
	border-color #999 transparent transparent
	border-style solid
	border-width 5px 5px 0
	content ' '
	display block
	height 0
	margin-top -ceil(2.5)
	position absolute
	right 10px
	top 14px
	width 0

.is-open
	.Dropdown-arrow
		border-color transparent transparent #999
		border-width 0 5px 5px

.Dropdown-menu
	background-color white
	border 1px solid #ccc
	box-shadow 0 1px 0 rgba(0,0,0,0.06)
	box-sizing border-box
	margin-top -1px
	max-height 200px
	overflow-y auto
	position absolute
	top 100%
	width 100%
	z-index 1000
	-webkit-overflow-scrolling touch
	.Dropdown-group
			& > .Dropdown-title
				padding 8px 10px
				color rgba(51,51,51,1.2)
				font-weight bold
				text-transform capitalize

.Dropdown-option
	box-sizing border-box
	color rgba(51,51,51,0.8)
	cursor pointer
	display block
	padding 8px 10px
	&:last-child
		border-bottom-right-radius 2px
		border-bottom-left-radius 2px
	&:hover
		background-color #f2f9fc
		color #333
	&.is-selected
		background-color #f2f9fc
		color #333

.Dropdown-noresults
	box-sizing border-box
	color #ccc
	cursor default
	display block
	padding 8px 10px